# Supabase PostgreSQL Connection
# Pooler connection for application queries
DATABASE_URL="postgresql://postgres.xxx:password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations (db push/migrate)
DIRECT_URL="postgresql://postgres.xxx:password@aws-0-region.pooler.supabase.com:5432/postgres"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# JWT Settings
JWT_SECRET="your-jwt-secret-key-change-in-production"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis Cloud (https://redis.io/cloud)
# Get your Redis URL from Redis Cloud dashboard
REDIS_URL="redis://default:password@redis-xxxxx.region.redis.io:6379"

# Cloudinary (https://cloudinary.com)
# Get credentials from Cloudinary Dashboard > Settings > Access Keys
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Client-side Cloudinary (for image URLs)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Resend Email (https://resend.com)
# Get API key from Resend Dashboard > API Keys
RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"
ADMIN_NOTIFICATION_EMAIL="admin@yourdomain.com"

# Telegram Bot (https://t.me/BotFather)
# 1. Create bot via @BotFather, get token
# 2. Start chat with bot, send /start
# 3. Get chat ID from https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN="1234567890:ABCDefGhIJKlmNoPQRsTUVwxYZ"
TELEGRAM_CHAT_ID="123456789"
